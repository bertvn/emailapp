<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingLeft="16dp"
                android:paddingRight="16dp" 
>

    <EditText 
        android:id="@+id/reader_sender"
        android:layout_width="353dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:hint="receiver"
        android:editable="false" 
    />
    <EditText
        android:id="@+id/reader_subject"
        android:layout_width="353dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/reader_sender"
        android:hint="subject" 
        android:editable="false" 
    />
    <EditText 
        android:id="@+id/reader_cc"
        android:layout_width="353dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/reader_subject"
        android:hint="cc"
        android:editable="false"
    />
    
    <Button
        android:id="@+id/reader_terug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="terug"
        android:onClick="email"  
    />
    
    <EditText
        android:id="@+id/reader_message"
        android:layout_width="353dp"
        android:layout_height="90dp"
        android:layout_below="@id/reader_cc"
        android:layout_above="@id/reader_terug"
        android:hint="message" 
        android:editable="false"
    />
    
</RelativeLayout>


